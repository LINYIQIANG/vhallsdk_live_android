<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/click_rtmp_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vhall_button_watch" />

        <Button
            android:id="@+id/click_rtmp_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vhall_button_orientation" />

        <Button
            android:id="@+id/click_rtmp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vhall_button_back" />

        <RadioGroup
            android:id="@+id/radio_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_btn_sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标清"
                android:textSize="10dp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radio_btn_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高清"
                android:textSize="10dp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radio_btn_uhd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超高清"
                android:textSize="10dp"
                android:visibility="gone" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_change_scaletype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_download_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#E60000"
        android:textSize="18sp" />


</RelativeLayout>